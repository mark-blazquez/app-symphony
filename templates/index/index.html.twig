{% extends 'base.html.twig' %}

{% block title %}Kubectl4Everyone{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}

{% block body %}
<style>
	.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
	/* CSS */
	#boton{
	background-color: #EA4C89;
	}
	@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

	body {
	background: #272727;
	font-family: "Montserrat", sans-serif;
	}

	* {
	margin: 0;
	padding: 0;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	}


	.navMenu {
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	}

	.navMenu a {
	color: #f6f4e6;
	text-decoration: none;
	font-size: 1.2em;
	text-transform: uppercase;
	font-weight: 500;
	display: inline-block;
	width: 200px;
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	}

	.navMenu a:hover {
	color: #fddb3a;
	}

	.navMenu .dot {
	width: 6px;
	height: 6px;
	background: #fddb3a;
	border-radius: 50%;
	opacity: 0;
	-webkit-transform: translateX(30px);
	transform: translateX(30px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	}

	.navMenu a:nth-child(1):hover ~ .dot {
	-webkit-transform: translateX(230px);
	transform: translateX(30px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	opacity: 1;
	}

	.navMenu a:nth-child(2):hover ~ .dot {
	-webkit-transform: translateX(430px);
	transform: translateX(230px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	opacity: 1;
	}

	.navMenu a:nth-child(3):hover ~ .dot {
	-webkit-transform: translateX(630px);
	transform: translateX(430px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	opacity: 1;
	}

	.navMenu a:nth-child(4):hover ~ .dot {
	-webkit-transform: translateX(830px);
	transform: translateX(630px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	opacity: 1;
	}
	.navMenu a:nth-child(5):hover ~ .dot {
	-webkit-transform: translateX(1030px);
	transform: translateX(830px);
	-webkit-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
	opacity: 1;
	}

</style>
<div class="example-wrapper">
	<div class="d-flex">
		<h1 class="text-light">Kubectl4Everyone</h1>
		<button id="boton" class="btn" role="button">Cerrar session</button>
	</div>
	<div>
		<nav class="navMenu">
			<a href="/pod">Pod</a>
			<a href="/service">Service</a>
			<a href="/deployment">Deployment</a>
			<a href="/replicaset">Replicaset</a>
			<a href="/nginx">Nginx</a>
      		<div class="dot"></div>
    	</nav>

	</div>	
</div>

	
{% endblock %}
